<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Year</th>
    <th>Start date</th>
    <th>End date</th>
    <th># Speakers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.year %></td>
      <td><%= event.start_date %></td>
      <td><%= event.end_date %></td>
      <td><%= event.speakers.size %></td>
      <td><%= link_to 'Show', admin_event_path(event) %></td>
      <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
      <td><%= link_to 'Destroy', admin_event_path(event), confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>

<br />


<h1>Listing snippets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @snippets.each do |snippet| %>
  <tr>
    <td><%= snippet.name %></td>
    <td><%= snippet.body %></td>
    <td><%= link_to 'Show', admin_event_snippet_path(@event, snippet) %></td>
    <td><%= link_to 'Edit', edit_admin_event_snippet_path(@event, snippet) %></td>
    <td><%= link_to 'Destroy', admin_event_snippet_path(@event, snippet), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


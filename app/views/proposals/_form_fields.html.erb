<%= f.inputs do %>
  <h4>Speaker Info</h4>
  <h5>Name</h5>
  <%= f.input :first_name, :label => "First" %>
  <%= f.input :last_name, :label => "Last" %>
  <%= f.input :email, :label => "Email" %>
  <%= f.input :location, :label => "Where do you live?", :hint => "City + State. Or City + Country if not USA." %>
  <%= f.input :bio, :label => "Bio (for program)", :hint => "Tell us something about who you are and why people should be excited to hear a talk from you. 75-125 words." %>
  <%= f.input :links, :label => "Website, Blog, etc." %>
  <%= f.input :github, :label => "Github Username" %>
  <%= f.input :twitter, :label => "Twiter Username" %>
  <%= f.input :speaker_cv, :label => "How many conferences have you spoken at before?", :hint => "Just let us know if you are a noob or an old hand. You can include meetups and user groups. “None” and “lots” are acceptable answers." %>
  <%= f.input :video_links, :label => "Are there videos of you speaking we can check out?", :hint => "Links to YouTube, Confreaks, Vimeo, etc. If we haven’t seen you speak before, this is a great way to show us what you can do." %>
  <h4>Talk</h4>
  <%= f.input :title, :label => "Title" %>
  <%= f.input :description, :label => "Description (for program)", :hint => "Tell the attendees why they should want to see your talk. What are they going to learn?" %>
  <%= f.input :notes, :label => "Notes for reviewers", :hint => "Please give us any information beyond the Description above that would help evaluate the proposal. Why is this an awesome talk for Aloha Ruby Conf?" %>
  <%= f.input :new_talk, :label => "Is this a new talk?", :hint => "We very much prefer original material, but not exclusively. Please let us know if this talk has been given elsewhere, or has been submitted to another conference and is under consideration. Which conference, dates, is there video?" %>
<% end %>
<%= f.buttons do %>
  <%= f.commit_button %>
<% end %>
